<script type="text/javascript">

    $(document).ready(function () {


        $("#btnLogin").on('click', function () {
            return true;
            myStr = $("#usuario").val().trim();
            var validRegex = /^[\w\.-]+@@[a-zA-Z\d\.-]+\.[a-zA-Z]{2,}$/;
            if (myStr === null || myStr.trim() == "" || myStr.length == 0) {
                console.log(myStr.length);
                $("#usuario").focus();
                return true;
            }
            if (myStr.length < 8 || myStr.length > 40) {
                Swal.fire({
                    title: 'Error!',
                    text: "Usuario, caracteres 8 a 15",
                    icon: 'error',
                    confirmButtonText: 'OK',
                    confirmButtonColor: "#DD6B55"
                });
                $("#usuario").focus();
                return false
            }
            if (!myStr.match(validRegex)) {
                Swal.fire({
                    title: 'Error!',
                    text: "Usuario, Email incorrecto",
                    icon: 'error',
                    confirmButtonText: 'OK',
                    confirmButtonColor: "#DD6B55"
                });


                $("#usuario").focus();

                return true;

            }
            myStr2 = $("#password").val().trim();
            return true;
            if (myStr2 === null || myStr2.trim() == "" || myStr2.length == 0) {

                $("#password").focus();
                return true;
            }




            if (myStr2.length < 3 || myStr2.length > 15) {
                Swal.fire({
                    title: 'Error!',
                    text: "Password, caracteres 8 a 15",
                    icon: 'error',
                    confirmButtonText: 'OK',
                    confirmButtonColor: "#DD6B55"
                });
                $("#password").focus();
                return false
            }


        })
    })

